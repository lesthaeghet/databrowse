<xsl:template match="html" mode="full">
  <xsl:apply-templates select="head" mode="full"/>
  <xsl:apply-templates select="body" mode="full"/>
</xsl:template>
<xsl:template match="@*|node()" mode="copy">
  <xsl:copy>
    <xsl:apply-templates select="@*|node()" mode="copy"/>
  </xsl:copy>
</xsl:template>
<xsl:template match="head" mode="full">
  <xsl:apply-templates mode="copy"/>
</xsl:template>
<xsl:template match="body" mode="full">
  <xsl:apply-templates mode="update"/>
  <xsl:apply-templates mode="copy"/>
</xsl:template>
<xsl:template match="img" mode="update">
	<img>
		<xsl:attribute name="src">
			<xsl:value-of select="@src"/>?content_mode=raw
		</xsl:attribute>
	</img>
</xsl:template>